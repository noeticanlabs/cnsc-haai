      "cpl_source": "package cgl.runtime.glyph\n\ndefaults:\n  effect: deny\n  reason: \"default_deny\"\n\nenvelopes:\n  glyph_stable_v1:\n    C_min: 0.93\n    grad_p99_max: 2.5\n    spr_max: 15\n    dE_dt_max: 0.08\n    telemetry_max_age_sec: 10\n\nbudgets:\n  compile_only:\n    coherence_budget: 0.2\n    max_runtime_sec: 60\n  execute_sandbox:\n    coherence_budget: 0.8\n    max_runtime_sec: 300\n\nrules:\n  - id: allow_compile_researchers\n    when:\n      operation == \"runtime.compile_glyph\"\n      actor.role in [\"researcher\", \"engineer\"]\n      risk.level in [\"GREEN\", \"YELLOW\"]\n    then:\n      effect: allow_with_constraints\n      reason: \"compile_allowed\"\n      constraints:\n        envelope: glyph_stable_v1\n        budget: compile_only\n        clamps:\n          max_recursion_depth: 12\n          max_symbol_count: 2000\n          allow_external_io: false\n\n  - id: execute_only_in_sandbox\n    when:\n      operation == \"runtime.execute_glyph\"\n      actor.role == \"researcher\"\n      runtime.environment == \"sandbox\"\n      risk.level == \"GREEN\"\n    then:\n      effect: allow_with_constraints\n      reason: \"sandbox_execute_only\"\n      constraints:\n        envelope: glyph_stable_v1\n        budget: execute_sandbox\n        quarantine: true\n        clamps:\n          max_recursion_depth: 10\n          max_symbol_count: 1200\n          allow_external_io: false\n",
      "normalized": {
        "defaults": {
          "effect": "deny",
          "reason": "default_deny"
        },
        "envelopes": {
          "glyph_stable_v1": {
            "C_min": 0.93,
            "grad_p99_max": 2.5,
            "spr_max": 15,
            "dE_dt_max": 0.08,
            "telemetry_max_age_sec": 10
          }
        },
        "budgets": {
          "compile_only": {
            "coherence_budget": 0.2,
            "max_runtime_sec": 60
          },
          "execute_sandbox": {
            "coherence_budget": 0.8,
            "max_runtime_sec": 300
          }
        },
        "rules": [
          {
            "id": "allow_compile_researchers",
            "when": {
              "operation": "runtime.compile_glyph",
              "actor.role": [
                "researcher",
                "engineer"
              ],
              "risk.level": [
                "GREEN",
                "YELLOW"
              ]
            },
            "then": {
              "effect": "allow_with_constraints",
              "reason": "compile_allowed",
              "constraints": {
                "envelope": "glyph_stable_v1",
                "budget": "compile_only",
                "clamps": {
                  "max_recursion_depth": 12,
                  "max_symbol_count": 2000,
                  "allow_external_io": false
                }
              }
            }
          },
          {
            "id": "execute_only_in_sandbox",
            "when": {
              "operation": "runtime.execute_glyph",
              "actor.role": [
                "researcher"
              ],
              "runtime.environment": [
                "sandbox"
              ],
              "risk.level": [
                "GREEN"
              ]
            },
            "then": {
              "effect": "allow_with_constraints",
              "reason": "sandbox_execute_only",
              "constraints": {
                "envelope": "glyph_stable_v1",
                "budget": "execute_sandbox",
                "quarantine": true,
                "clamps": {
                  "max_recursion_depth": 10,
                  "max_symbol_count": 1200,
                  "allow_external_io": false
                }
              }
            }
          }
        ]
