{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "cgl.policy.decision.v1",
  "type": "object",
  "required": [
    "schema_version",
    "decision_id",
    "policy_bundle_hash",
    "effect",
    "constraints",
    "rationale",
    "matched_rules",
    "decided_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^v\\d+$"
    },
    "decision_id": {
      "type": "string"
    },
    "policy_bundle_hash": {
      "type": "string"
    },
    "effect": {
      "type": "string",
      "enum": [
        "allow",
        "deny",
        "allow_with_constraints"
      ]
    },
    "matched_rules": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "rationale": {
      "type": "string"
    },
    "constraints": {
      "type": "object",
      "properties": {
        "envelope": {
          "type": [
            "string",
            "null"
          ]
        },
        "budget": {
          "type": [
            "string",
            "null"
          ]
        },
        "coherence_budget": {
          "type": [
            "number",
            "null"
          ]
        },
        "max_runtime_sec": {
          "type": [
            "integer",
            "null"
          ]
        },
        "clamps": {
          "type": "object"
        },
        "quarantine": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "output_controls": {
          "type": "object"
        }
      },
      "additionalProperties": true
    },
    "decided_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}