{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NSC_Packet",
  "type": "object",
  "required": [
    "NSC_Packet"
  ],
  "properties": {
    "NSC_Packet": {
      "type": "object",
      "required": [
        "header",
        "body",
        "footer"
      ],
      "properties": {
        "header": {
          "type": "object",
          "required": [
            "version",
            "author",
            "mode"
          ],
          "properties": {
            "version": {
              "type": [
                "string",
                "number"
              ]
            },
            "author": {
              "type": "string"
            },
            "mode": {
              "type": "string",
              "enum": [
                "symbolic",
                "math",
                "exec"
              ]
            }
          }
        },
        "body": {
          "type": "object",
          "required": [
            "content"
          ],
          "properties": {
            "content": {
              "type": "string"
            }
          }
        },
        "footer": {
          "type": "object",
          "required": [
            "hash"
          ],
          "properties": {
            "hash": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}