{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://caelus.ai/schemas/receipt.schema.json",
  "title": "Receipt",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "receipt_id",
    "ts_utc",
    "claim_id",
    "inputs",
    "outputs",
    "metrics",
    "reproducibility"
  ],
  "properties": {
    "receipt_id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{10,80}$"
    },
    "ts_utc": {
      "type": "string",
      "format": "date-time"
    },
    "claim_id": {
      "type": "string",
      "minLength": 6,
      "maxLength": 120
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "dataset_hashes",
        "code_commit",
        "config_hash"
      ],
      "properties": {
        "dataset_hashes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        },
        "code_commit": {
          "type": "string",
          "minLength": 7,
          "maxLength": 64
        },
        "config_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "seed": {
          "type": "integer"
        }
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "artifacts"
      ],
      "properties": {
        "artifacts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "ref",
              "sha256"
            ],
            "properties": {
              "ref": {
                "type": "string",
                "minLength": 4,
                "maxLength": 240
              },
              "sha256": {
                "type": "string",
                "pattern": "^[a-f0-9]{64}$"
              }
            }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true
    },
    "reproducibility": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "environment",
        "command"
      ],
      "properties": {
        "environment": {
          "type": "object",
          "additionalProperties": true
        },
        "command": {
          "type": "string",
          "minLength": 4,
          "maxLength": 400
        }
      }
    },
    "notes": {
      "type": "string",
      "maxLength": 4000
    }
  }
}