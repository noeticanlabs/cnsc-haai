{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://caelus.ai/schemas/gate_decision.schema.json",
  "title": "GateDecision",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "decision_id",
    "ts_utc",
    "gate_name",
    "input_hash",
    "decision",
    "reasons",
    "thresholds",
    "actions"
  ],
  "properties": {
    "decision_id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{10,80}$"
    },
    "ts_utc": {
      "type": "string",
      "format": "date-time"
    },
    "gate_name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 80
    },
    "input_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "decision": {
      "type": "string",
      "enum": [
        "allow",
        "warn",
        "block",
        "reroute",
        "defer"
      ]
    },
    "reasons": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 3,
        "maxLength": 240
      }
    },
    "thresholds": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "score": {
          "type": "number"
        },
        "max_risk": {
          "type": "number"
        },
        "min_confidence": {
          "type": "number"
        }
      }
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "log",
              "request_more_info",
              "switch_tool",
              "reduce_privilege",
              "abort",
              "human_review"
            ]
          },
          "payload": {
            "type": "object"
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 64
      }
    }
  }
}