{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://caelus.ai/schemas/eval_run.schema.json",
  "title": "EvalRun",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "ts_utc",
    "suite",
    "model_id",
    "datasets",
    "protocol",
    "results",
    "artifacts"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{10,80}$"
    },
    "ts_utc": {
      "type": "string",
      "format": "date-time"
    },
    "suite": {
      "type": "string",
      "minLength": 2,
      "maxLength": 120
    },
    "model_id": {
      "type": "string",
      "minLength": 2,
      "maxLength": 120
    },
    "datasets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "split_hash"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 120
          },
          "split_hash": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        }
      }
    },
    "protocol": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "prompt_version",
        "decoding",
        "tooling"
      ],
      "properties": {
        "prompt_version": {
          "type": "string",
          "minLength": 2,
          "maxLength": 64
        },
        "decoding": {
          "type": "object",
          "additionalProperties": true
        },
        "tooling": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "results": {
      "type": "object",
      "additionalProperties": true
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "ref",
          "sha256"
        ],
        "properties": {
          "ref": {
            "type": "string",
            "minLength": 4,
            "maxLength": 240
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        }
      }
    }
  }
}