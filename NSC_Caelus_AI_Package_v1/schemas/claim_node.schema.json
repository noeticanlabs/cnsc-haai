{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://caelus.ai/schemas/claim_node.schema.json",
  "title": "ClaimNode",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "claim_id",
    "statement",
    "kpi",
    "guardrails",
    "conditions",
    "evidence_refs",
    "status"
  ],
  "properties": {
    "claim_id": {
      "type": "string",
      "minLength": 6,
      "maxLength": 120
    },
    "statement": {
      "type": "string",
      "minLength": 10,
      "maxLength": 1200
    },
    "kpi": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "direction",
        "target"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 2,
          "maxLength": 120
        },
        "direction": {
          "type": "string",
          "enum": [
            "increase",
            "decrease"
          ]
        },
        "target": {
          "type": "number"
        }
      }
    },
    "guardrails": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "limit"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 120
          },
          "limit": {
            "type": "number"
          }
        }
      }
    },
    "conditions": {
      "type": "object",
      "additionalProperties": true
    },
    "evidence_refs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4,
        "maxLength": 240
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "proposed",
        "tested",
        "replicated",
        "shipped",
        "rejected"
      ]
    },
    "failure_modes": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 6,
        "maxLength": 240
      }
    }
  }
}