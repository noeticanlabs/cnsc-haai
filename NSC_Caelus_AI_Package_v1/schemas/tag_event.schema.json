{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://caelus.ai/schemas/tag_event.schema.json",
  "title": "TagEvent",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_id",
    "ts_utc",
    "actor",
    "scope",
    "tags",
    "evidence",
    "confidence",
    "ttl_policy"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{10,80}$"
    },
    "ts_utc": {
      "type": "string",
      "format": "date-time"
    },
    "actor": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "id"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "human",
            "agent",
            "tool",
            "system"
          ]
        },
        "id": {
          "type": "string",
          "minLength": 2,
          "maxLength": 120
        }
      }
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "domain",
        "context_id"
      ],
      "properties": {
        "domain": {
          "type": "string",
          "minLength": 2,
          "maxLength": 64
        },
        "context_id": {
          "type": "string",
          "minLength": 6,
          "maxLength": 160
        }
      }
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 64
      }
    },
    "evidence": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "kind",
          "ref"
        ],
        "properties": {
          "kind": {
            "type": "string",
            "enum": [
              "log",
              "metric",
              "artifact",
              "human_note",
              "external_source"
            ]
          },
          "ref": {
            "type": "string",
            "minLength": 4,
            "maxLength": 240
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        }
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "ttl_policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "class",
        "expires_utc"
      ],
      "properties": {
        "class": {
          "type": "string",
          "enum": [
            "ephemeral",
            "session",
            "project",
            "retained"
          ]
        },
        "expires_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "notes": {
      "type": "string",
      "maxLength": 4000
    }
  }
}