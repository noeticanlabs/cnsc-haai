{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://noetica.com/schema/receipt.ats.v3.json",
  "title": "ATS Canonical Receipt v3",
  "description": "Deterministic, consensus-tight receipt for ATS kernel verification. Uses JCS canonicalization and domain-separated chain hashing.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "step_type",
    "receipt_body",
    "chain"
  ],
  "properties": {
    "schema_id": {
      "type": "string",
      "const": "receipt.ats.v3"
    },
    "step_type": {
      "type": "string",
      "enum": [
        "STEP_MICRO",
        "STEP_SLAB",
        "STEP_FRAUD_PROOF",
        "STEP_FINALIZE"
      ]
    },
    "receipt_body": {
      "type": "object",
      "description": "Step-specific payload. Structure defined by step_type."
    },
    "chain": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "prev_chain_hash",
        "chain_hash"
      ],
      "properties": {
        "prev_chain_hash": {
          "$ref": "#/definitions/sha256_digest"
        },
        "chain_hash": {
          "$ref": "#/definitions/sha256_digest"
        }
      }
    }
  },
  "definitions": {
    "sha256_digest": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "SHA-256 hex digest with 'sha256:' prefix. This is the ONLY allowed format for v3."
    }
  }
}
